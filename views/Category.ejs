<%- include('partials/header', {title:"Tiger Helper Category"}, {data:data}) -%>

<div class="jumbotron">
<div class="container">
  <h2 class="display-4">Add Activity to Category!</h2>
  <form action="/Category" method="POST">
    <label for="day"> Which Day?:</label>
    <select id="day" name="day">
      <%for(category in data){%>
      <option value="<%=category%>"><%=category%></option>
      <%}%>
      </select>
      <br><br>
    <label for="category"> Which Category?:</label>
    <select id="category" name="category">
      <%let i = 0%>
      <%for(day in data){%>
        <%i++%>
      <%for(type in data[day]){%>
      <%if(i<=1){%>
        <option value="<%=type%>"><%=type%></option>
      <%}}}%>
    </select>
    <br><br>
    <label for="activity">What is the activity?:</label>
    <input class="lead" type="text" id="activity" name="activity" value=""><br>
    <br><br>
    <input class="lead" type="submit" value="Add to your ToDo List!">

  </form>
</div>
</div>


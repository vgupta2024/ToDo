<%- include('partials/header', {title:"Tiger Helper Create Category"}, {data:data}) -%>

<div class="jumbotron">
<div class="container">
<h2 class="display-4">Reflect on your Week!</h2>

<form action="/Reflect" method="POST">
  <label for="day"> Which Day?:</label>
  <select id="day" name="day">
    <%for(category in data){%>
    <option value="<%=category%>"><%=category%></option>
    <%}%>
    </select>
  <br><br>
  <label for="reflection">Write your reflection here!</label>
  <input class="lead" type="text" id="reflection" name="reflection" value=""><br>
  <br><br>
  <input class="lead" type="submit" value="Submit your reflection!">

</form>
</div>
</div>

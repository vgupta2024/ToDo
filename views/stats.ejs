<%- include('partials/header', {title:"Tiger Helper Stats"}, {data:data}) -%>


<div class="jumbotron">
<div class="container">
  <h1 class="display-4"> Weekly Progress! </h1>
  <table class="table">
    <thead>
      <tr bgcolor>
        <th class="display-6">Days:</th>
        <% for (let day in data) { %>
          <th>
        <%  if (data[day]["Completed"] == 0) { %>
        <form action="/Stats/<%=day%>" method="POST">
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="check1" name="option1" value="something">
      <label class="form-check-label" for="check1">To-Do</label>
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="check2" name="option2" value="something">
      <label class="form-check-label" for="check2">In Progress</label>
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="check3" name="option3" value="something">
      <label class="form-check-label" for="check2">Overdue</label>
    </div>
    <div class="form-check">
      <input type="checkbox" class="form-check-input" id="check4" name="option4" value="something">
      <label class="form-check-label" for="check2">Completed</label>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit</button>
  </form>
  <% } %>
  <br><br><br>
     <a href="/Category/<%=day%>"> <h1 style="background-color: <%= data[day]["color"] %>"> <%=day%> </h1></a>
   </th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% for (let spec in categories["Monday"]) { %>
          <tr>
            <th class="lead">
            <%= spec %>
            </th>
            <% for (let d in categories) { %>
            <td>
            <p style="color: <%= data[d]["color"] %>"> <%=categories[d][spec]%> </p>
            </td>
            <%}}%>
            </tr>
          </tbody>
        </table>
      </div>
    </div>

    <%- include('partials/footer') -%>


<%- include('partials/header', {title:"Tiger Helper"}, {data: data}) -%>

  <div class="jumbotron">
  <div class="container">
    <h1 class="display-4"> ToDo List! </h1>
    <table class="table">
      <thead>
        <tr>
          <th>Categories</th>
          <% for (let day in data) { %>
            <th class="lead"> <a href="/Category/<%=day%>"><%=day%></a> </th>
            <% } %>
          </tr>
        </thead>
        <tbody>
            <tr>
              <th class="lead">
                <form action="/EditCategory/<%=category%>" method="POST">
                  <input type="text" id="name" name="categoryName" value="<%= category %>"><br>
                  <input type="submit" value="Rename Category!">

                </form>
              </th>
              <% for (let d in data) { %>
              <td>
                <% if (data[d][category] != "") { %>

                <form action="/EditActivity/<%= d %>/<%=category%>/<%=data[d][category]%>" method="POST">

                  <input type="text" id="name" name="activity" value="<%=data[d][category]%>"><br>
                  <input type="submit" value="Rename <%= d %> Activity!">
                    <% } %>
              </td>
              <%}%>
            </tr>

          </tbody>
        </table>
      </div>
    </div>
  <%- include('partials/footer') -%>
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto|Varela+Round|Open+Sans">
  <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

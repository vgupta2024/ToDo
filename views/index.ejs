<%- include('partials/header', {title:"Tiger Helper"}, {data: data}) -%>

  <div class="jumbotron">
  <div class="container">
    <h1 class="display-4"> ToDo List! </h1>
    <table class="table">
      <thead>
        <tr>
          <th>Categories</th>
          <% for (let day in data) { %>
            <th class="lead"> <a href="/Category/<%=day%>"><%=day%></a> </th>
            <% } %>
          </tr>
        </thead>
        <tbody>
          <% for (let categories in data["Monday"]) { %>
            <tr>
              <th class="lead">
                <%=categories%>
              </th>
              <% for (let d in data) { %>
              <td>
                <%=data[d][categories]%>
              </td>
              <%}}%>
            </tr>

          </tbody>
        </table>
      </div>
    </div>
  <%- include('partials/footer') -%>


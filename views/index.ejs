<%- include('partials/header', {title:"Tiger Helper"}, {data: data}) -%>

<h1> ToDo List! </h1>
<table class="table">
  <thead>
    <tr>
      <% for (let day in data) { %>
    <th scope="col"> <a href="/Category/<%=day%>"><%=day%></a> </th>
    <% } %>
    </tr>
  </thead>
  <tbody>
    <% let i =0 %>
      <% for (let day in data) { %>
        <% i++ %>
      <% for (let categories in data[day]) { %>
        <tr>
          <% if(i<=1) { %>
          <th>
            <%=categories%>
          </th>
          <% } %>
          <% if (data[day][categories] != "") { %>
            <td>
              <%=data[day][categories]%>
            </td>
        </tr>
    <%}} %>
    </tbody>


  <% } %>
</table>
